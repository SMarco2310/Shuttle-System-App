generator client {
  provider = "prisma-client-js"
  // The output field specifies where the generated Prisma Client will be saved
  // By default, it goes to node_modules/.prisma/client, but this overrides it
  // to save the generated client code to "../src/generated/prisma" directory
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       BigInt    @id @default(autoincrement())
  email    String    @unique
  name     String?
  password String
  phone    String?   @unique
  bookings Booking[]
}

model Booking {
  id               BigInt   @id @default(autoincrement())
  // should add the class like the user one
  pickup_location  BigInt
  dropoff_location BigInt
  user             User     @relation(fields: [userId], references: [id])
  userId           BigInt   @unique
  createdAt        DateTime @default(now())
}

